<h1> <%= @user.first_name %>'s FlightHack Profile </h1>

<%= link_to 'Edit Profile', edit_user_path(@user) %>
<p>
  <%= image_tag @user.avatar.url(:medium) %>
</p>
<p>
  <%= @user.first_name %>
</p>
<p>
  <%= @user.last_name %>
</p>
<p>
  <%= @user.username %>
</p>
<p>
<%= @user.birthday %>
</p>

<% if current_user.try(:admin?) %>
<%= link_to 'Flight Inventory', flights_path(@user) %>
<% else %>
<%= link_to 'Bid on Flights', flights_path(@user) %>
<% end %>
